#!/bin/bash

# Default prefix, can be overridden with --prefix
prefix="/usr/local"

# Parse arguments
while [[ $# -gt 0 ]]; do
  case "$1" in
    --prefix)
      prefix="$2"
      shift 2
      ;;
    *)
      echo "Unknown option: $1"
      exit 1
      ;;
  esac
done

# Create bin directory if it doesn't exist
mkdir -p bin

# Generate pathconfig.vars
cat > pathconfig.vars <<EOF
# Auto-generated configuration
prefix="$prefix"
libdir="$prefix/lib"
bindir="$prefix/bin"
EOF

echo "Configuration written to pathconfig.vars"
